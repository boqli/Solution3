@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>

@foreach (var p in Model)
{
@if (p.Disable == false)
{
<div class="col-4">
    <div class="card" style="width: 20rem; height:38rem">
        <img src="@p.ImageUrl" class="card-img-top image" alt="...">
        <div class="card-body">
            <h5 class="card-title">@p.Name</h5>
            <p class="card-text">€ @p.Price</p>
            <hr />
            <a href="/Products/Details?id=@p.Id" type="button" class="btn btn-primary">View Specification</a>
            <hr />
            <a href="/Cart/AddToCart?id=@p.Id" type="button" class="btn btn-warning">Add to Cart</a>
            @if (User.IsInRole("Admin"))
            {
                <hr />
                <a href="/Products/DisableProduct?id=@p.Id" class="btn btn-danger">Disable</a>}
        </div>
    </div>
</div>}}
