<form class="form-inline" method="post" action="/Products/Search">
    <div class="form-group mb-2">
        <label class="col-form-label">Search:</label>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" placeholder="Type your keyword here"  name="keyword">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<form class="form-inline" method="post" action="/Products/searchByCategory">
    <div class="form-group mb-2">
        <label class="col-form-label">Search by category:</label>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <select name="category" for="Category.Id" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option href="searchByCategory?@category.Id" value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>