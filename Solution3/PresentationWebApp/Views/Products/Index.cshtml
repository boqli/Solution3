@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products Catalogue</h1>

<div class="container">

    @Html.Partial("SearchPartial")

    @if (User.IsInRole("Admin"))
    {
        <a href="/Products/create" class="btn btn-warning">Create</a>
    }

    @if (TempData["feedback"] != null)
    {
        <div class="feedback alert alert-success">@TempData["feedback"]</div>
    }
    @if (TempData["warning"] != null)
    {
        <div class="feedback alert alert-danger">@TempData["warning"]</div>
    }
</div>

<div class="container">
    <div class="row">

       @Html.Partial("ViewProductsPartial", Model)
    </div>
</div>



